# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/collegebuddy
DB_USERNAME=collegebuddy
DB_PASSWORD=your_secure_database_password_here
DB_POOL_SIZE=10

# JWT Configuration (Must be at least 32 characters)
JWT_SECRET=your_secure_jwt_secret_here_base64_encoded_minimum_32_characters
JWT_TTL_SECONDS=3600

# Email Configuration (SendGrid or other SMTP provider)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@collegebuddy.app
# EMAIL_STRATEGY: 'smtp' for production (default), 'logging' for development (emails logged to console)
EMAIL_STRATEGY=logging

# Frontend Configuration
# Development: http://localhost:3000
# Production: https://collegebuddy.app or https://www.collegebuddy.app
FRONTEND_URL=http://localhost:3000

# CORS Configuration (comma-separated list of allowed origins)
# Development: Keep localhost values
# Production: Replace with https://collegebuddy.app,https://www.collegebuddy.app
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:5174

# File Upload Configuration
UPLOAD_DIR=uploads/avatars/

# Logging Configuration
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
FLYWAY_LOG_LEVEL=INFO

# Spring Profile (dev, prod, etc.)
# SPRING_PROFILES_ACTIVE=prod
